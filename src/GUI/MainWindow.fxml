<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MainWindowController">
    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
    <center>
        <GridPane fx:id="inputGrid" alignment="CENTER" hgap="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="errorMessage" text="Wrong login and/or password" visible="false" GridPane.columnIndex="1"/>
                <Label text="User Name :" GridPane.rowIndex="1" />
                <Label text="Password :" GridPane.rowIndex="2" />
                <TextField fx:id="loginField" promptText="your login here..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" promptText="Your password here..." GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                   <children>
                       <Button fx:id="connexionButton" disable="true" onMouseClicked="#connexionClickAction" text="Connexion" />
                   </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="25.0" right="25.0" top="25.0" />
            </padding>
        </GridPane>
    </center>
   <top>
          <Text id="welcome-text" text="Application de gestion du festival du cirque" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
